<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:orientation="vertical"
                tools:context=".MainActivity">

    <TextView
            android:layout_alignParentBottom="true"
            android:text="Codebase-census"
            android:gravity="center"
            android:id="@+id/txtRepoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.otikev.codecensus.widget.SquareCardView
                android:layout_margin="20dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/totalFilesCardView"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="5dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                        android:text="200"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/txtTotalFiles"
                        android:layout_above="@+id/txtTotalFilesLabel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                <TextView
                        android:layout_alignParentBottom="true"
                        android:text="Total files"
                        android:gravity="center"
                        android:id="@+id/txtTotalFilesLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </RelativeLayout>
        </com.otikev.codecensus.widget.SquareCardView>

        <com.otikev.codecensus.widget.SquareCardView
                android:layout_margin="20dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/totalContributorsCardView"
                android:layout_toRightOf="@+id/totalFilesCardView"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="5dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                        android:text="12"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/txtContributors"
                        android:layout_above="@+id/txtContributorsLabel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                <TextView
                        android:layout_alignParentBottom="true"
                        android:text="Contributors"
                        android:gravity="center"
                        android:id="@+id/txtContributorsLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </RelativeLayout>
        </com.otikev.codecensus.widget.SquareCardView>
    </LinearLayout>
</LinearLayout>